
@using Api.Weather.Entities;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

    string msn = ViewBag.Msn;
    List< WeatherForecast> weathers = ViewBag.list;
}



<h1>Clima es:</h1>





<table>
           <thead>
               <tr>
                   <th>Fecha</th>
                   <th>Temperatura Cº</th>
                   <th>Temperatura Fº</th>
                   <th>Resumen:</th>
               </tr>
               

           </thead>

           <tbody>
               <tr>
                   @if (weathers != null)
                   {
                       @foreach (var weather in weathers)
                       {
                       <tr>
                           <td>@weather.Date</td>
                           <td>@weather.TemperatureC</td>
                           <td>@weather.TemperatureF</td>
                           <td>@weather.Summary</td>
                       </tr>
                      }
                   }
                   else
                   {
<td> No existen registros</td>
                }
               </tr>

           </tbody>

       </table>
            


